				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="Black" Offset="0"/>
					<GradientStop Color="#FF498F9D" Offset="1"/>
					<GradientStop Color="#FFBEE840" Offset="0.009"/>
				</LinearGradientBrush>
			</TextBlock.Foreground>
			<Run Text="WYKR"/>
			<Run Text="E"/>
			<Run Text="SY"/>
		</TextBlock>
