				<RowDefinition/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="0.65*"/>
				<ColumnDefinition Width="0.35*"/>
			</Grid.ColumnDefinitions>
			<Grid x:Name="klawiatura" Grid.Column="1" Grid.RowSpan="5" Margin="0">
